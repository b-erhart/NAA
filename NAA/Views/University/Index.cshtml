@model IEnumerable<NAA.Data.Models.Domain.University>

@{
    ViewBag.Title = "Universities";
}

<h2>Universities</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Show Courses", "Index", new { name = item.Name, Controller = "Service"})
        </td>
    </tr>
}

</table>
